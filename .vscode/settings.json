{
    "files.associations": {
        "*.js": "javascriptreact"
    },
    "editor.formatOnSave": true,
    "flow.useNPMPackagedFlow": true,
    "javascript.validate.enable": false,
    "javascript.format.enable": false,
    "prettier.eslintIntegration": true,
    "files.exclude": {
        "**/.git": true,
        "**/.DS_Store": true,
        "**/*.js": { "when": "$(basename).ts"},
        "**/*.map": true,
        "**/node_modules/": true,
        "**/.gitignore": false,
        "**/androidx/": true,
        "**/ios/": true,
    }
}